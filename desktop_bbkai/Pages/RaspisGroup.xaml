                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding date_r}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding Discs.name_d}" Header="Дисциплина" Width="400"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Vidi.name_v}" Header="Вид занятия" Width="80"/>
