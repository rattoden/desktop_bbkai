<UserControl x:Class="desktop_bbkai.Verx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:desktop_bbkai"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="1300">
    <Grid Background="#2196F3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="BbKai" FontSize="35" Width="100" Foreground="#b6dffd"
               VerticalAlignment="Center" Margin="140 0 0 0"/>
        <Button Grid.Column="1" Width="50" Height="50" Click="Button_Click" BorderBrush="#2196F3" x:Name="btn">
            <Image Source="images/vix.png" Width="40" Height="40" ToolTip="Выход"/>
        </Button>
    </Grid>
</UserControl>
